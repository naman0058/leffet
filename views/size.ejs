  <script>
  $('.submit').click(function(){
      if($('#name').val() == [] || $('#name').val() == '') alert('Enter Name');
    
      else {
          let name = $('#name').val()
          let quantity_type = $('#quantity_type').val()
      
          $.post('/size/insert',{name,quantity_type},data=>{
              alert('Successfully')
          })
      }
  })
  
  
  
  </script>

